<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/splash_page</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/splash_page</item>
    </style>

    <style name="FullscreenTheme" parent="AppThemeNoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="ButtonBase" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">center</item>
        <item name="cornerRadius">6dp</item>
    </style>

    <style name="ButtonBrand" parent="ButtonBase">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="rippleColor">@color/colorPrimaryDarker</item>
        <item name="android:fontFamily">@font/nunito_extrabold</item>
        <item name="android:textSize">@dimen/button_brand_textsize</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:lineSpacingExtra">@dimen/nunito_extrabold_lineSpacingExtra</item>
    </style>

    <style name="ButtonBrandDark" parent="ButtonBase">
        <item name="backgroundTint">@color/button_brand_darker</item>
        <item name="rippleColor">@color/button_brand_darker_dark</item>
        <item name="android:fontFamily">@font/nunito_extrabold</item>
        <item name="android:textSize">@dimen/button_brand_textsize</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:lineSpacingExtra">@dimen/nunito_extrabold_lineSpacingExtra</item>
    </style>

    <style name="ButtonBrandSecondType" parent="ButtonBrand">
        <item name="backgroundTint">@color/button_second_color</item>
        <item name="rippleColor">@color/button_second_color</item>
    </style>

    <style name="ButtonBrandWhite" parent="ButtonBase">
        <item name="backgroundTint">@android:color/white</item>
        <item name="rippleColor">@color/colorPrimaryDarker</item>
        <item name="android:fontFamily">@font/nunito_extrabold</item>
        <item name="android:textSize">@dimen/button_brand_textsize</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:lineSpacingExtra">@dimen/nunito_extrabold_lineSpacingExtra</item>
    </style>

    <style name="ButtonBrandDisabled" parent="ButtonBrand">
        <item name="backgroundTint">@color/disabled_button_text_color</item>
        <item name="rippleColor">@color/disabled_button_text_color</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ButtonBrandLink" parent="ButtonBase">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="android:fontFamily">@font/nunito_extrabold</item>
        <item name="android:textSize">@dimen/button_brand_textsize</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:lineSpacingExtra">@dimen/nunito_extrabold_lineSpacingExtra</item>
    </style>

    <style name="TextBrandLink" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">@dimen/text_link_brand_textsize</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:lineSpacingExtra">@dimen/nunito_extrabold_lineSpacingExtra</item>
    </style>

    <style name="TextBrandLinkRegular" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">@dimen/text_link_brand_textsize_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:lineSpacingExtra">@dimen/nunito_regular_lineSpacingExtra</item>
    </style>

    <style name="ButtonBrandAlert" parent="ButtonBase">
        <item name="backgroundTint">@color/threshold_alarm</item>
        <item name="rippleColor">@color/threshold_alarm</item>
    </style>

    <style name="ButtonFacebook" parent="ButtonBase">
        <item name="backgroundTint">@android:color/holo_blue_light</item>
        <item name="rippleColor">@android:color/holo_blue_dark</item>
    </style>

    <style name="ButtonGoogle" parent="ButtonBase">
        <item name="backgroundTint">@android:color/holo_red_light</item>
        <item name="rippleColor">@android:color/holo_red_dark</item>
    </style>

    <style name="ProgressWidget.Progress" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progressbar_residue</item>
        <item name="android:rotation">270</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="NunitoBlack" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/nunito_black</item>
        <item name="android:lineSpacingExtra">@dimen/nunito_black_lineSpacingExtra</item>
    </style>

    <style name="NunitoBold" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:lineSpacingExtra">@dimen/nunito_bold_lineSpacingExtra</item>
    </style>

    <style name="NunitoExtraBold" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/nunito_extrabold</item>
        <item name="android:lineSpacingExtra">@dimen/nunito_extrabold_lineSpacingExtra</item>
    </style>

    <style name="NunitoSemiBold" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:lineSpacingExtra">@dimen/nunito_semibold_lineSpacingExtra</item>
    </style>

    <style name="NunitoRegular" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:lineSpacingExtra">@dimen/nunito_regular_lineSpacingExtra</item>
    </style>

    <style name="NunitoLight" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/nunito_light</item>
        <item name="android:lineSpacingExtra">@dimen/nunito_light_lineSpacingExtra</item>
    </style>

    <style name="UserInfoSectionTitle" parent="NunitoSemiBold">
        <item name="android:textStyle">normal</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/user_info_text_color</item>
        <item name="android:textSize">@dimen/user_info_section_text_size</item>
    </style>

    <style name="UserInfoSubsectionTitle" parent="NunitoLight">
        <item name="android:textStyle">normal</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/user_info_text_color</item>
        <item name="android:textSize">@dimen/user_info_section_text_size</item>
    </style>

    <style name="UserInfoSectionValue" parent="NunitoRegular">
        <item name="android:textStyle">normal</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/user_info_text_color_dark</item>
        <item name="android:textSize">@dimen/user_info_section_text_size</item>
    </style>

    <style name="BottomNavigation.ActiveItemTextAppearance" parent="NunitoExtraBold">
        <item name="android:textSize">@dimen/bottom_navigation_text_size</item>
    </style>

    <style name="BottomNavigation.InactiveItemTextAppearance" parent="NunitoRegular">
        <item name="android:textSize">@dimen/bottom_navigation_text_size</item>
    </style>

    <style name="ButtonEditMsisdn" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">6dp</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="rippleColor">@color/colorPrimaryDarker</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textSize">10dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="BrandTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="hintTextColor">@color/hint_color</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="boxStrokeColor">@color/textinputlayout_box</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:lineSpacingExtra">@dimen/nunito_regular_lineSpacingExtra</item>
        <item name="errorTextColor">@color/error_color</item>
        <item name="errorIconTint">@color/error_color</item>
        <item name="boxStrokeErrorColor">@color/error_color</item>
    </style>

    <style name="BrandEditTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:textCursorDrawable">@color/edit_text_color</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:lineSpacingExtra">@dimen/nunito_regular_lineSpacingExtra</item>
        <item name="android:paddingStart">0dp</item>
    </style>

    <style name="CheckboxBrand" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:textCursorDrawable">@color/edit_text_color</item>
        <item name="useMaterialThemeColors">true</item>
    </style>

    <!-- Rubrica -->
    <style name="AppTheme.AppBarOverlay" parent="Theme.MaterialComponents.Light.NoActionBar" />

    <style name="AppTheme.PopupOverlay" parent="Theme.MaterialComponents.Light.NoActionBar" />

    <style name="BaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/navigationBarColor</item>
        <item name="colorPrimaryDark">@color/navigationBarColor</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
        <item name="android:statusBarColor" tools:targetApi="23">@color/navigationBarColor</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorEdgeEffect">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogFragmentTheme</item>
    </style>

    <style name="BottomSheetDialogFragmentTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/textColorPrimary</item>
        <item name="colorPrimaryDark">@color/textColorPrimary</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorEdgeEffect">@color/colorAccent</item>
        <item name="bottomSheetStyle">@style/ModalSheetTheme</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="ModalSheetTheme" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_sheet_dialog</item>
    </style>

    <style name="TextInputLayoutTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="MaterialButtonContained" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/navigationBarColor</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="MaterialButtonOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="strokeWidth">1dp</item>
    </style>

</resources>
